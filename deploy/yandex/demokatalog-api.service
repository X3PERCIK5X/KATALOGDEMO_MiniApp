[Unit]
Description=Demo Katalog SaaS API
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/demokatalog-api
EnvironmentFile=/opt/demokatalog-api/.env.local
ExecStart=/usr/bin/node /opt/demokatalog-api/server.js
Restart=always
RestartSec=3
NoNewPrivileges=true
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
